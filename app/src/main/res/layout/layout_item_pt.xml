<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_background_item"
        android:padding="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_pt_avata"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/item_pt_avata"
            android:paddingLeft="10dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_pt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tÃªn pt"
                    android:fontFamily="@font/robito_indam"
                    android:textSize="15dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/item_pt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robito_indam"
                    android:textSize="15dp"
                    android:text="email"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/item_pt_imgtd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_optionmenu"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>