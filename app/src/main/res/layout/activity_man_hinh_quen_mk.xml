<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context=".ManHinhQuenMk">

    <ImageView
        android:id="@+id/img_mhQuenMk_back"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_baseline_keyboard_backspace_24"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/robito_indam"
            android:gravity="center"
            android:text="Quên Mật Khẩu ?"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Đừng lo lắng,chúng tôi sẽ giúp bạn lấy lại mật khẩu chỉ với một vài thao tác"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="240dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:src="@drawable/img_banner2" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_edt_mhQuenMk_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập Username"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_edt_mhQuenMk_PIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập PIN"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/re_mhlogin_nextto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_mhQuenMk_SetNewMk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:text="Cài Làm Mật Khẩu Mới"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:background="@drawable/shape_backgroud_btn_mhc"
            app:backgroundTint = "@null"
            android:layout_centerHorizontal="true"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_below="@+id/btn_mhQuenMk_SetNewMk"
            android:gravity="center_horizontal"
            android:layout_gravity="">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bạn chưa có tài khoản?"
                android:textSize="11dp"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/tv_mhQuenMK_textDK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng Ký"
                android:textSize="14dp"
                android:textColor="#8C2D2D"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>